{
  "name": "testcrate",
  "private": true,
  "version": "1.0.0",
  "description": "Test reporting server",
  "main": "dist/cli.js",
  "bin": "dist/cli.js",
  "type": "module",
  "workspaces": [
    "packages/*",
    "presets/*"
  ],
  "files": [
    "dist/cli.*"
  ],
  "engines": {
    "node": ">=20.18.0"
  },
  "scripts": {
    "prepare": "husky install",
    "build": "node scripts/esbuild.js",
    "start": "node dist/cli.js",
    "lint": "yarn workspaces foreach --exclude 'testcrate' -R run lint",
    "test": "yarn workspaces foreach --exclude 'testcrate' -R run test",
    "version:update": "node scripts/update-version.js"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.1",
    "@commitlint/config-conventional": "^19.4.1",
    "@testcrate/core": "workspace:*",
    "@testcrate/eslint-config-cli": "workspace:*",
    "@testcrate/prettier-config-cli": "workspace:*",
    "@testcrate/server": "workspace:*",
    "@testcrate/typescript-config-cli": "workspace:*",
    "@types/tar-stream": "^3.1.4",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.25.0",
    "esbuild-node-externals": "^1.14.0",
    "husky": "^9.1.5"
  },
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "yarn@4.9.2",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
